{
  "name": "@ivangabriele/tsconfig",
  "description": "My most commonly used Typescript configurations.",
  "license": "MIT",
  "version": "1.2.2",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "test:lint": "prettier -c .",
    "preversion": "yarn test",
    "postversion": "node ./scripts/finalizeVersionBump.js"
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@ivangabriele/commitlint-config": "1.1.0",
    "@ivangabriele/prettier-config": "3.2.0",
    "husky": "9.0.10",
    "prettier": "2.8.8",
    "shelljs": "0.8.5"
  },
  "packageManager": "yarn@4.1.0",
  "prettier": "@ivangabriele/prettier-config"
}
