    "@ivangabriele/prettier-config": "5.0.1",
    "husky": "9.0.10",
    "prettier": "3.2.5",
    "shelljs": "0.8.5"
  },
  "packageManager": "yarn@4.1.0",
  "prettier": "@ivangabriele/prettier-config"
}
